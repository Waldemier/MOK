<div class="d-flex justify-content-center">
    <div style="width: 31%;">
        {{#if success}}
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">Encryption completed successfully!</h4><i class="far fa-laugh-wink"></i>
                <hr>
                <p>Text message: {{message}}</p>
                <p>Key: {{encryptionKey}}</p>
                <hr>
                <p class="mb-0" style="max-width: auto;">Encryption message: {{encryptionMessage}}</p>
            </div>
        {{/if}}

        {{#if error}}
            <div class="alert alert-danger" role="alert" style="text-align: center">
                {{error}}
            </div>
        {{/if}}

        {{#if warning}}
            <div class="alert alert-warning" role="alert">
                {{warning}}
            </div>
        {{/if}}

            <div>
                <form id="data" action="/encrypt" method="post">
                        <div class="input-group mb-3">
                            <span class="input-group-text">Text message</span>
                            <textarea class="form-control" name="message" aria-label="With textarea" placeholder="Write something..." required></textarea>
                        </div>
                        <div class="input-group has-validation mb-3">
                            <span class="input-group-text" id="inputGroupPrepend3"><i class="fas fa-key"></i></span>
                            <input type="text" class="form-control" id="validationKey" name="key" aria-describedby="inputGroupPrepend3 validationServerKeyFeedback" placeholder="Input key..." required>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" name="ukr" type="checkbox" value="" id="flexCheckIndeterminate">
                            <label class="form-check-label" for="flexCheckIndeterminate">
                                Ukrainian alphabet
                            </label>
                        </div>    
                </form>
                <div class="d-flex justify-content-center mt-4">
                    <br><button form="data" type="submit" class="btn btn-outline-success btn-lg" style="margin-right: auto">Encryption</button>
                    <a href="/info"><button type="button" class="btn btn-outline-info btn-lg">More information...</button></a>
                </div>
            </div>
            <div class="table-responsive mt-4">
            <table class="table">
                <thead>
                    <tr>
                        {{#each table}}
                            <th scope="col">{{this}}</th>
                        {{/each}}
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {{#each table}}
                            <td>{{@key}}</td>
                        {{/each}}
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

